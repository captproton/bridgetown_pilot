<div class="page-header">
  <%= link_to pages_path, class: 'btn btn-default' do %>
    All Pages
  <% end %>
  <%= link_to edit_page_path(@page), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show page</h1>
</div>

<dl class="dl-horizontal">
  <dt>Layout:</dt>
  <dd><%= @page.layout %></dd>
  <dt>Title:</dt>
  <dd><%= @page.title %></dd>
  <dt>Categories:</dt>
  <dd><%= @page.categories %></dd>
  <dt>Body:</dt>
  <dd><%= @page.body %></dd>
  <dt>Publish at:</dt>
  <dd><%= @page.publish_at %></dd>
</dl>
